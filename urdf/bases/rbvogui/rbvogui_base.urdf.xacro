<?xml version="1.0"?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro">


  <xacro:include filename="$(find robot_description)/urdf/bases/gazebo/rbvogui_base.gazebo.xacro" />

  <xacro:macro name="rbvogui_base" params="robot_id publish_bf hq">

    <!-- Robot mechanical and motor parameters -->
    <xacro:property name="PI" value="3.1415926535897931"/>

    <!-- BASE FOOTPRINT -->
    <xacro:if value="${publish_bf}">
      <link name="${robot_id}_base_footprint" />

      <joint name="${robot_id}_base_footprint_joint" type="fixed">
        <origin xyz="0 0 ${wheel_radius}" rpy="0 0 0" />
        <!-- ${wheel_radius} property must be defined inside wheel description -->
        <parent link="${robot_id}_base_footprint"/>
        <child link="${robot_id}_base_link" />
      </joint>
    </xacro:if>

    <!-- BASE_LINK -->
    <link name="${robot_id}_base_link"/>

    <!-- Chassis -->
    <joint name="${robot_id}_chassis_joint" type="fixed">
      <origin xyz="-0.012 0 0.1775" rpy="0 0 0" /> <!-- Modificar para cada vogui -->
      <parent link="${robot_id}_base_link"/>
      <child link="${robot_id}_chassis_link" />
    </joint>

    <!-- Chassis -->
    <link name="${robot_id}_chassis_link">
      <inertial>
        <mass value="25.0" />
        <origin xyz="0 0 0.10" />
        <xacro:solid_cuboid_inertia w="1.265" h="0.812" d="0.22" m="25.0"/>
      </inertial>
      <visual>
        <origin xyz="0 0 0" rpy="0 0 0" />
        <xacro:if value="${hq}">
          <geometry>
            <mesh filename="package://robot_description/meshes/bases/rbvogui/rbvogui_chassis_color.dae"/>
          </geometry>
        </xacro:if>
        <xacro:unless value="${hq}">
          <geometry>
            <mesh filename="package://robot_description/meshes/bases/rbvogui/rbvogui_chassis.stl"/>
          </geometry>
        </xacro:unless>
      </visual>
      <collision>
        <origin xyz="0 0 0" rpy="0 0 0 " />
        <geometry>
          <mesh filename="package://robot_description/meshes/bases/rbvogui/rbvogui_chassis_color.dae"/>
        </geometry>
      </collision>
    </link>

    <!-- Battery -->
    <joint name="${robot_id}_battery_joint" type="fixed">
      <origin xyz="0.02952 0 0" rpy="0 0 0 " />
      <parent link="${robot_id}_chassis_link"/>
      <child link="${robot_id}_battery_link" />
    </joint>

    <!-- Battery -->
    <link name="${robot_id}_battery_link">
      <inertial>
        <mass value="45.0" />
        <origin xyz="0 0 -0.05" />
        <xacro:solid_cuboid_inertia w="0.265" h="0.112" d="0.06" m="45.0"/>
      </inertial>
      <visual>
        <origin xyz="0 0 0" rpy="0 0 0" />
        <xacro:if value="${hq}">
          <geometry>
             <mesh filename="package://robot_description/meshes/bases/rbvogui/rbvogui_battery.stl"/>

          </geometry>
        </xacro:if>
        <xacro:unless value="${hq}">
          <geometry>
             <mesh filename="package://robot_description/meshes/bases/rbvogui/rbvogui_battery.stl"/> 

          </geometry>
        </xacro:unless>
        <material name="darkgrey">
          <color rgba="0.1 0.1 0.1 1"/>
        </material>
      </visual>
      <collision>
        <origin xyz="0 0 0" rpy="0 0 0 " />
        <geometry>
           <mesh filename="package://robot_description/meshes/bases/rbvogui/rbvogui_battery.stl"/> 
        </geometry>
      </collision>
    </link>

    <!-- Contactors -->
    <joint name="${robot_id}_contactors_joint" type="fixed">
      <origin xyz="0.5235 0 0.09265" rpy="0 0 0 " />
      <parent link="${robot_id}_chassis_link"/>
      <child link="${robot_id}_contactors_link" />
    </joint>

    <!-- Contactors -->
    <link name="${robot_id}_contactors_link">
      <visual>
        <origin xyz="0 0 0" rpy="0 0 0" />
        <xacro:if value="${hq}">
          <geometry>
            <mesh filename="package://robot_description/meshes/bases/rbvogui/rbvogui_contactors.stl" />
          </geometry>
        </xacro:if>
        <xacro:unless value="${hq}">
          <geometry>
            <mesh filename="package://robot_description/meshes/bases/rbvogui/rbvogui_contactors.stl" />
          </geometry>
        </xacro:unless>
        <material name="lighbrown">
          <color rgba="0.7 0.3 0.0 1"/>
        </material>
      </visual>
    </link>


    <!-- Logos -->
    <joint name="${robot_id}_base_logos_joint" type="fixed">
      <origin xyz="0 0 -0.1775" rpy="0 0 0" />
      <parent link="${robot_id}_chassis_link"/>
      <child link="${robot_id}_base_logos_link" />
    </joint>

    <!-- Logos -->
    <link name="${robot_id}_base_logos_link">
      <visual>
        <origin xyz="-0.015 0 0" rpy="0 0 0 " />
        <xacro:if value="${hq}">
          <geometry>
            <mesh filename="package://robot_description/meshes/bases/rbvogui/rbvogui_logos.stl" scale="1.001 1.076 1.001"/>
          </geometry>
        </xacro:if>
        <xacro:unless value="${hq}">
          <geometry>
            <mesh filename="package://robot_description/meshes/bases/rbvogui/rbvogui_logos.dae" scale="1.001 1.076 1.001"/>
          </geometry>
        </xacro:unless>
        <material name="lightred">
          <color rgba="0.9 0.2 0.2 1"/>
        </material>
      </visual>
    </link>


    <!-- Leds -->
    <joint name="${robot_id}_leds_joint" type="fixed">
      <origin xyz="0 0 0.1025" rpy="0 0 0 " />
      <parent link="${robot_id}_chassis_link"/>
      <child link="${robot_id}_leds_link" />
    </joint>

    <link name="${robot_id}_leds_link">
      <visual>
        <origin xyz="0 0 0" rpy="0 0 0.0" />
          <geometry>
              <mesh filename="package://robot_description/meshes/bases/rbvogui/rbvogui_leds.stl" />
          </geometry>
        <material name="lightgreen">
          <color rgba="0.1 1.0 0.1 1"/>
        </material>
      </visual>
    </link>

    <xacro:gazebo_color_base_link robot_id="${robot_id}"/>
    <!--xacro:gazebo_color_chassis_link robot_id="${robot_id}_"/-->
    <xacro:gazebo_color_battery_link robot_id="${robot_id}"/>
    <xacro:gazebo_color_contactors_link robot_id="${robot_id}"/>
    <xacro:gazebo_color_logo_link robot_id="${robot_id}"/>
    <xacro:gazebo_color_leds_link robot_id="${robot_id}"/>

  </xacro:macro>
</robot>
